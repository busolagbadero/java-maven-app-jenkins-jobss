pipeline {
    agent any 
    parameters {
        choice(name: 'bubu', choices: ['bubu:1.0', 'bubu:1.1', 'bubu 1:2'], description: 'version name of the owner')
        booleanParam(name: 'executeDeploy', defaultValue: true, description: 'bubu playing around')
    }
    stages {

        stage("init") {
            steps {
                script {
                    gv = load "bubu.groovy"
                }
            }
        }

        stage("Build") {
            steps {
                script {
                    gv.buildApp()
                }
            }
        }

        stage("Test") {
            steps {
                script {
                    gv.TestApp()
                }
            }
        }

        stage("Deploy") {
            when {
                expression {
                    params.executeDeploy
                } 
            }
            steps {
                script {
                    gv.DeployApp()
                }
            }
        }
      
    }
}
